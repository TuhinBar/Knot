<%- include('partials/header',{pageTitle: pageTitle}) %>
    <link rel="stylesheet" href="/css/login.css">
    <script src="/js/login.js" defer></script>
</head>
<body>
 
    <div class="box">
     <div class="container">
 
         <div class="top">
             <img src="/images/knot.png" class="logo" alt="Logo">
             <header>Sign in to Knot</header>
         </div>
 
         <form action="/login" method="post">
         <div class="input-field">
             <img src="/images/User.png" class="userpass_logo" alt="User">
             <input type="text" class="input" placeholder="Username" name="username" id="" required>
         </div>
 
         <div class="input-field">
             <img src="/images/Pass.png" class="userpass_logo" alt="User">
             <input type="password" class="input" placeholder="Password" name="password" id="password"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,16}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
             <img src="/images/closedeye.png" class="userpass_logo" id="eyeicon" alt="">
         </div>
        
 
         <div class="input-field">
             <input type="submit" class="signin hovereffect" value="Sign in">
         </div>
        </form>
        
         <div class="withcredentials">      
                 <label><a href="">Forgot password?</a></label>
                 <label>New user?<a href="/signup"> Register Here</a></label>
         </div>
         <a href="auth/google">
         <div class="alternates">
            <button type="submit" id="google" class="hovereffect"><img id="google-logo" src="/images/google.png" alt=""> Sign in with Google</button>
        </div> </a>
     </div>
 </div>  

 <% if (messages.error) { %>
    <%- include('partials/flashModal', {message: messages}) %>
    <% } %>
 </body>
</html>